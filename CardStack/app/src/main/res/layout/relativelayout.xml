<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="400dp"
    android:padding="10dp"
    android:layout_marginTop="40dp"
    android:layout_marginStart="50dp"
    android:background="@drawable/border"
    tools:context="com.example.petruz.cardstack.RelativeLayout">

    <TextView
        android:id="@+id/kind"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a"
        android:textSize="25sp"
        android:textColor="#FF2200"
        />

    <ImageView
        android:id="@+id/firstHeart"
        android:contentDescription="@string/this_is_a_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/heart"
        android:layout_below="@+id/kind"

        />

    <ImageView
        android:id="@+id/secondHeart"
        android:contentDescription="@string/this_is_a_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/heart"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lastText"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/relative"
        android:textSize="25sp"
        android:textColor="#FF2200"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/kind"
        />

    <TextView
        android:id="@+id/kind2"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a"
        android:textSize="25sp"
        android:textColor="#FF2200"
        android:layout_alignBottom="@+id/secondHeart"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/lastText"
        android:layout_alignParentEnd="true"
        android:rotation="180"
        />

    <ImageView
        android:id="@+id/firstHeart2"
        android:contentDescription="@string/this_is_a_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/heart"
        android:rotation="180"
        android:layout_above="@+id/kind2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>